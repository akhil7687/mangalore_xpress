.classified-banner{
  background: url("<%= asset_path 'banner4.jpg'%>") no-repeat left center #2c2c2c;
  padding:80px 20px;
  background-size: 100%;
  color:#fff;
}

.banner-inner{
  display: inline-block;
  padding:30px;
  background: rgba(34, 34, 34, 0.89);
  border-radius: 10px;
}

.classified-banner .fa-search{
  font-size: 45px;
  margin-right: 10px;
}

.classified-banner h1{
  font-size:45px;
  margin-top:10px;
}

.classified-banner .tagline{
  font-size: 18px;
}

.classified-banner .cls_icons{
  padding:10px;
}

.classified-banner .cls_icons .fa{
  font-size:20px;
  margin:5px;
}

.classified-banner .cls_icons .fa-mobile{
  font-size:25px;
}

.classified-banner .cls_icons img{
  height:25px;
  margin-top:-10px;
  margin-left: 2px;
  margin-right: 2px;
}

.classified-status{
  text-transform: uppercase;
  margin-left: 10px;
  background: #ff0;
  padding:2px 5px;
  margin-top:10px;
  color:#111;
}

.classi_det{
  display:inline;
  float:right;
  padding: 3px 10px;
  margin-top: 3px;
}


.ribbon-wrapper {
  width: 85px;
  height: 88px;
  overflow: hidden;
  position: absolute;
 /* top: 11px;
  left: 14px;*/
}

.ribbon-wrapper .ribbon {
  font-weight: bold;
  color: #333;
  text-align: center;
  -webkit-transform: rotate(-45deg);
  -moz-transform: rotate(-45deg);
  -ms-transform: rotate(-45deg);
  -o-transform: rotate(-45deg);
  position: relative;
  padding: 2px 0;
  top: 15px;
  left: -30px;
  width: 110px;
  background-color: #ebb134;
  color: #fff;
}

.ribbon-wrapper .green{
  background: #2c7;
}

.ribbon-wrapper .red{
  background: #e43;
}
