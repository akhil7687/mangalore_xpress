<%= form_for(ad) do |f| %>

  <div class="form-group">
    <%= f.label :ad_img, 'Ad Pic' %>
    <%= f.file_field :ad_img,:class=>"form-control" %>
  </div>

  <%if user_signed_in? && current_user.is_admin?%>
    <div class="form-group">
      <%= f.label :enable, 'Enable' %>
      <%=f.select :enable, [['Enable', true], ['Disable', false]]%>
    </div>
  <%end%>

  <div class="form-group">
    <%= f.label :ad_type, 'Ad Type' %>
    <%=f.select :ad_type, [['General', 'General'], ['Store', 'Store']]%>
  </div>

  <div class="actions text-center">
    <%= f.submit (f.object.new_record? ? "POST THIS AD" : "UPDATE"),:class=>"btn btn-primary",:style=>"font-size:18px; font-weight: bold; padding: 4px 30px;" %>
  </div>
<% end %>

<style>
  .select-dropdown{
    padding: 10px;
    font-size: 12px;
  }
  #classified_pic{
    height: 45px;
    padding-top: 10px;
  }
</style>
