<%=render "home/page_header"%>

<div class='content'>
  <p id="notice"><%= notice %></p>
  <h1>Ads</h1>

  <br>

  <%= link_to 'New Ad', new_ad_path %>

  <br>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Ad Pic</th>
        <th>Shown Count</th>
        <th>Enable</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @ads.each do |ad| %>
        <tr>
          <td><%= image_tag ad.ad_img.url(:thumb) %></td>
          <td><%=ad.shown_count%></td>
          <td><%= ad.enable %></td>
          <td><%= link_to 'Show', ad %></td>
          <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
          <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
