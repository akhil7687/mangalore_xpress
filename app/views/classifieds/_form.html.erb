<%= form_for(classified) do |f| %>

  <div class="form-group">
    <%= f.label :classified_category %>
    <%= f.collection_select :classified_category_id, ClassifiedCategory.all, :id, :name%>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title,:class=>"form-control" %>
  </div>

   <div class="form-group">
    <%= f.label :phone, 'Your Phone Number (Not shown to users)' %>
    <%= f.text_field :phone,:class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description,:class=>"form-control",:style=>"height:100px; margin-top:2px;" %>
  </div>

  <div class="form-group">
    <%= f.label :pic, 'Ad Pic' %>
    <%= f.file_field :pic,:class=>"form-control" %>
  </div>


  <%if user_signed_in?%>
    <div class="form-group" style="padding: 4px 0px;">
      <%=f.check_box :status%>
      <label for="classified_status">ENABLE</label>
    </div>
  <%end%>

  <div class="actions text-center">
    <%= f.submit (f.object.new_record? ? "POST THIS AD" : "UPDATE"),:class=>"btn btn-primary",:style=>"font-size:18px; font-weight: bold; padding: 4px 30px;" %>
  </div>
<% end %>

<style>
  .select-dropdown{
    padding: 10px;
    font-size: 12px;
  }
  #classified_pic{
    height: 45px;
    padding-top: 10px;
  }
</style>
