<%= form_for(classified) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title,:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description,:class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :classified_category %>
    <%= f.collection_select :classified_category_id, ClassifiedCategory.all, :id, :name%>
  </div>

  <div class="form-group">
    <%= f.label :pic %>
    <%= f.file_field :pic,:class=>"form-control" %>
  </div>


  <div class="actions">
    <%= f.submit (f.object.new_record? ? "Create" : "Update"),:class=>"btn btn-primary" %>
  </div>
<% end %>
