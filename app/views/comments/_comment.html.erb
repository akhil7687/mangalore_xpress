<div style="margin:8px auto; line-height: 1.2;" class="comment_<%=comment.id%>">
  <%=image_tag comment.user.photo.url(:thumb),:style=>"float:left; width:35px; height:35px;"%>
  <div style="float:left; width:80%; display:inline; margin-left:8px;">
   <%=link_to comment.user.nice_name, member_path(comment.user)%>
   <span style='margin-left:5px;' class='proxima-regular'> <%=comment.body%></span>
   <div style="color:#555">
    <small><%= time_ago_in_words(comment.created_at) %> ago</small>
    <%if user_signed_in? && comment.user.id==current_user.id%>
      <%=link_to comment_path(comment),:style=>"font-size:13px; color:#777; margin-left:5px;",method: :delete, data: { confirm: 'Are you certain you want to delete this?' },:remote=>true,:title=>"Remove" do%>
        <i class='fa fa-trash'></i>
      <%end%>
    <%end%>
   </div>
  </div>

  <div class="clearfix"></div>
</div>
