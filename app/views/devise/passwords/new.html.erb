<%=render 'home/page_header'%>


<div class="row-fluid">
  <div class="col-md-4">
  </div>
  <div class="col-md-4">
    <div class="registration_form_cont">
      <h2 class="text-center">Forgot your password?</h2>
      <div style="margin-top: 15px;">
      	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
				  <%= devise_error_messages! %>
				  <div class="form-group">
				    <label for="email" class="control-label">Email <span class="required-field">*</span></label>
				      <div class="has-feedback">
				        <%= f.email_field :email, autofocus: false,:class=>"form-control" %>
				        <span class="fa fa-user form-control-feedback" aria-hidden="true"></span>
				      </div>
				  </div>
				  <div class="actions text-center" style="margin-top: 15px;">
				    <%= f.submit "Send me reset password instructions",:class=>"btn btn-hero",:style=>"margin-top:5px; margin-bottom:10px; font-size: 14px; padding: 4px 30px; height:41px; font-weight:bold;" %>
				  </div>
				  <div style="margin-top: 15px; text-align: center;">
				  	<%=link_to "Sign Up", new_user_registration_path,:style=>"margin-right:6px;"%> |
				  	<%=link_to "Sign In", new_user_session_path,:style=>"margin-left:6px;"%>
				  </div>
				<% end %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
  </div>
</div>