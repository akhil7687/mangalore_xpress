<div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <label for="email" class="control-label">Email <span class="required-field">*</span></label>
      <div class="has-feedback">
        <%= f.email_field :email, autofocus: false,:class=>"form-control" %>
        <span class="fa fa-user form-control-feedback" aria-hidden="true"></span>
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="control-label">Password <span class="required-field">*</span></label>
      <div class="has-feedback">
        <%= f.password_field :password,:class=>"form-control",autocomplete: "off" %>
        <span class="fa fa-lock form-control-feedback" aria-hidden="true"></span>
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="control-label">Password Confirmation<span class="required-field">*</span></label>
      <div class="has-feedback">
        <%= f.password_field :password_confirmation,:class=>"form-control",autocomplete: "off" %>
        <span class="fa fa-lock form-control-feedback" aria-hidden="true"></span>
      </div>
    </div>
    <div class="text-center">
       <%= f.submit "SIGN UP",:class=>"btn btn-hero",:style=>"margin-top:5px; margin-bottom:10px; font-size: 20px; padding: 4px 30px; height:41px;" %>
    </div>
    <div style="margin:10px auto; text-align: center;">
      <div style="font-size: .15625in; margin-top: 5px;">
        Already have an account? <%=link_to "Sign in", new_user_session_path,:style=>"margin-left:6px;"%>
      </div>
    </div>
  <% end %>
</div>
