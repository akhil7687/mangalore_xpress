<%=render "home/page_header"%>

<div class="row-fluid">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <div class="registration_desc" style="margin-bottom:20px; background:#fafafa">
      <h2 class="text-center" style="margin-bottom:15px;">Create your profile</h2>
      <div>
        <div class="text-center" id="prof_target" style="margin-bottom:15px;">
          <%=image_tag current_user.photo.url(:medium)%>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :multipart=>true }) do |f| %>

          <div class="form-group" style="margin-bottom:15px;">
            <label for="occupation" class="control-label">YOUR PHOTO <span class="required-field"></span></label>
            <%= f.file_field :photo,:accept=>"image/gif, image/jpeg, image/png, image/jpg" %>
          </div>

          <div class="form-group" style="margin-bottom:15px;">
            <label for="name" class="control-label">Name <span class="required-field">*</span></label>
            <div class="has-feedback">
              <%= f.text_field :name,:class=>"form-control",:placeholder=>"Enter your name" %>
              <span class="fa fa-user form-control-feedback" aria-hidden="true"></span>
            </div>
          </div>

          <div class="text-center">
            <%= f.submit "SAVE PROFILE",:class=>"sign_in_btn",:style=>"margin-top:5px; margin-bottom:10px; font-size: 20px; padding: 8px 30px; border: 1px solid #f7bd21;" %>
          </div>
        <%end%>
      </div>
    </div>
  <div class="col-md-3">
  </div>
</div>
