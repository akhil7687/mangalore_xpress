<div class="post">
  <%if feed.pic.present?%>
    <%=image_tag feed.pic.url(:original),:style=>"width:100%;","data-high-res-img"=>feed.pic.url(:original),:class=>"viewable-image"%>
  <%else%>
    <%=raw feed.description%>
  <%end%>
  <div class='text-right' style="font-size: 12px;color: #90949c;font-family: 'proxima_nova_rgregular'; margin:5px; auto">
    <%=feed.created_at.strftime("%d %b %Y %I:%M%p")%>
  </div>
</div>


<style type="text/css">
  .post {
    background: #fff;
    border: 1px solid #d2d2d2;
    margin-bottom: 10px;
    padding: 10px;
  }
</style>
