<div class="post" style="position:relative;">
  <%if user_signed_in? && (current_user.is_admin?)%>
    <%=link_to feed_path(feed,:feed=>{:status=> 0}),:style=>"margin-left:5px; position:absolute; right:5px; top:8px;",:method => :put,:data=>{:confirm=>"Are you sure you want to remove this news?"} do%>
      <i class='fa fa-trash' style="margin-right:15px;"></i>
    <%end%>
  <%end%>
  <%if feed.title.present?%>
    <div class='post-head'>
      <%=feed.title%>
    </div>
  <%end%>
  <div style="font-size: 10px;color: #90949c;font-family: 'proxima_nova_rgregular'; margin-bottom:5px; auto; text-transform:uppercase;">
    <%if feed.is_article%>
      POSTED - <%=feed.created_at.strftime("%d %b %Y %I:%M%p")%>
    <%else%>
      POSTED - <%=feed.published_date.strftime("%d %b %Y %I:%M%p")%>
    <%end%>
  </div>
  <%if feed.pic.present?%>
    <%=image_tag feed.pic.url(:original),:style=>"width:100%;","data-high-res-img"=>feed.pic.url(:original),:class=>"viewable-image"%>
  <%end%>
  <%if feed.description.present?%>
   <div class='post-ex'>
      <%=raw feed.description%>
    </div>
  <%end%>
  <%if feed.details.present?%>
    <%=link_to "READ MORE",feed_path(feed),:style=>"text-decoration:underline;"%>
  <%end%>
</div>


<style type="text/css">
  .post {
    background: #fff;
    border: 1px solid #d2d2d2;
    margin-bottom: 10px;
    padding: 10px;
  }
  .post-ex{
    font-size: 15px;
    color: #565656;
    margin-bottom: 4px;
  }

  .post-ex img{
    width: 96%;
    margin-bottom: 10px;
  }

  .post-head{
    font-size: 16px;
    font-weight: bold;
    color:#424141;
  }
</style>
