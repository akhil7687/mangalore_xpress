<%=render "home/page_header"%>
<p id="notice"><%= notice %></p>
<div class="content">
  <h1 class="text-center">Quizzes</h1>
    <%= link_to 'New Quiz', new_quiz_path %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>S.No</th>
          <th>Quiz name</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

    <tbody>
      <% @quizzes.each_with_index do |quiz,index| %>
        <tr>
          <td><%=index+1%></td>
          <td><%= quiz.quiz_name %></td>
          <td><%= (quiz.status == 1) ? "ENABLED" : "DISABLED"%></td>
          <td><%= link_to 'Show', quiz %></td>
          <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
          <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
