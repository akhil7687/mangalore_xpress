<!--QUOTS POPUP-->
<section>
  <!-- GET QUOTES POPUP -->
  <div class="modal fade dir-pop-com" id="list-quo" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header dir-pop-head">
          <button type="button" class="close" data-dismiss="modal" style="color:#fff;">Ã—</button>
          <h4 class="modal-title">REQUEST A CALLBACK</h4>
          <p class='text-center' style="color:#ccc;">( Our executive will call you shortly )</p>
          <!--<i class="fa fa-pencil dir-pop-head-icon" aria-hidden="true"></i>-->
        </div>
        <div class="modal-body dir-pop-body">
          <%= form_for [@context,Enquiry.new],:html=>{:class=>"form-horizontal"} do |f| %>
            <!--LISTING INFORMATION-->
            <div class="form-group has-feedback ak-field">
              <label class="col-md-4 control-label">Full Name *</label>
              <div class="col-md-8">
                <%=f.text_field :user_name,:class=>"form-control",:placeholder=>"", :required=>true%>
              </div>
            </div>
            <!--LISTING INFORMATION-->
            <div class="form-group has-feedback ak-field">
              <label class="col-md-4 control-label">Mobile *</label>
              <div class="col-md-8">
                <%=f.text_field :user_phone,:class=>"form-control",:placeholder=>"", :required=>true%>
              </div>
            </div>
            <!--LISTING INFORMATION-->
            <div class="form-group has-feedback ak-field">
              <label class="col-md-4 control-label">Email</label>
              <div class="col-md-8">
                <%=f.text_field :user_email,:class=>"form-control",:placeholder=>"", :required=>true%>
              </div>
            </div>
            <!--LISTING INFORMATION-->
            <div class="form-group has-feedback ak-field">
              <div class="col-md-6 col-md-offset-4">
                <input type="submit" value="SUBMIT" class="pop-btn"> </div>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
  <!-- GET QUOTES Popup END -->
</section>
