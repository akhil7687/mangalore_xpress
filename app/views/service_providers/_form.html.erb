<%= form_for(service_provider) do |f| %>
  <% if service_provider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service_provider.errors.count, "error") %> prohibited this service_provider from being saved:</h2>

      <ul>
      <% service_provider.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name,:class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description,:class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :speciality %>
    <%= f.text_field :speciality,:class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :contact_no %>
    <%= f.text_field :contact_no,:class=>"form-control" %>
  </div>

  <div class="form-group">
    <div class='iimg'>
      <%if service_provider.pic.present?%>
        <%=image_tag service_provider.pic.url(:thumb)%>
      <%end%>
    </div>
    <%= f.label :pic %>
    <%= f.file_field :pic,:dest_img=>"iimg",:class=>"file_with_thumb"  %>
  </div>

  <div class="form-group">
    <%= f.label :service_category_id %>
    <%= f.collection_select :service_category_id, ServiceCategory.all, :id, :name%>
  </div>

   <div class="form-group">
    <%=f.select :enable, [['Enable', true], ['Disable', false]]%>
    <label for="service_provider_enable">Enable</label>
  </div>

  <div class="actions">
    <%= f.submit "SUBMIT",:class=>"btn btn-primary" %>
  </div>
<% end %>
