<%=render "home/page_header"%>

<div class="content">

  <p id="notice"><%= notice %></p>

  <h1>Service Providers</h1>

  <table class='table table-bordered'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Speciality</th>
        <th>Contact no</th>
        <th>Pic</th>
        <th>Service category</th>
        <th>Enable</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @service_providers.each do |service_provider| %>
        <tr>
          <td><%= service_provider.name %></td>
          <td><%= service_provider.description %></td>
          <td><%= service_provider.speciality %></td>
          <td><%= service_provider.contact_no %></td>
          <td><%= image_tag service_provider.pic.url(:thumb) %></td>
          <td><%= service_provider.service_category.name %></td>
          <td><%= service_provider.enable %></td>
          <td><%= link_to 'Edit', edit_service_provider_path(service_provider) %></td>
          <td><%= link_to 'Destroy', service_provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Service Provider', new_service_provider_path %>

</div>
