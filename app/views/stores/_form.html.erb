<%= form_for(store) do |f| %>
  <% if store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>
      <ul>
      <% store.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name,:class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description,:class=>"form-control" %>
  </div>


  <div class="form-group">
    <div class='iimg'>
      <%if store.store_logo.present?%>
        <%=image_tag store.store_logo.url(:thumb)%>
      <%end%>
    </div>
    <%= f.label :store_logo %>
    <%= f.file_field :store_logo,:dest_img=>"iimg",:class=>"file_with_thumb"  %>
  </div>


  <div class="form-group">
    <%=f.select :enable, [['Enable', true], ['Disable', false]]%>
    <label for="store_enable">Enable</label>
  </div>

  <div class="actions">
    <%= f.submit (f.object.new_record? ? "Create" : "Update"),:class=>"btn btn-primary" %>
  </div>
<% end %>
