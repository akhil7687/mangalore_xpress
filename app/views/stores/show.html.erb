<%=render "home/page_header"%>

<div class="content" style="padding:10px; margin:10px; background:#fff; border:1px solid #ccc;">

  <div class="text-center">
    <%=image_tag @store.store_logo.url(:thumb)%>
    <div>
      <h3><%=@store.name%></h3>
      <h4><%=@store.description%></h4>
    </div>
    <div style="padding:10px">
      <%=link_to "ADD PRODUCTS",new_product_path(:store_id=>@store.id),:class=>"btn btn-primary"%>
    </div>

    <div class="row-fluid">
      <%@store.products.each do |product|%>
        <div class="col-md-2">
          <div style="border:1px solid #ccc; text-align:center; padding:10px;">
            <div><%=image_tag product.product_image.url(:thumb)%></div>
            <div><h5>Rs.<%=product.price%><span style='margin-left:5px; text-decoration: line-through;'> Rs.<%=product.mrp%> </span></h5></div>
            <div>
              <%=link_to "EDIT", edit_product_path(product),:style=>"text-decoration:underline; margin-right:5px;"%>
              <%=link_to "SHOW", product_path(product),:style=>"margin-left:5px; text-decoration:underline;"%>
            </div>
          </div>
        </div>
      <%end%>
      <div class="clearfix"></div>
    </div>

  </div>


</div>
