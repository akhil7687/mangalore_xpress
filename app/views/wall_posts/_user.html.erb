<div style=" margin-top:15px;">
  <div class="profile">
   <div class="profile-top">
     <div class="pic-sec">
      <%if user_signed_in? && current_user.id == @user.id && false%>
        <%=link_to profile_path,:style=>"position:absolute; right:25px; top:20px; color:#fff; font-size:15px;font-family: 'proxima_nova_rgregular';" do%>
          <i class="fa fa-pencil" style="margin-right: 3px;"></i>
          EDIT
        <%end%>
      <%end%>
       <div class="pic">
        <%=image_tag @user.photo.url(:medium),"data-high-res-img"=>@user.photo.url(:original),:class=>"viewable-image"%>
       </div>
       <div class="clearfix"></div>
        <div class="pdet_cont">
          <h2><%=@user.nice_name%></h2>
          <%if user_signed_in? && current_user.id == @user.id%>
            <div style="padding:3px; text-align:center; font-size:11px; margin-top:10px">
              <%= link_to "EDIT PROFILE", profile_path,:class=>"btn btn-success",:style=>"padding:2px 10px; font-size:12px; text-transform:uppercase; border-radius:2px;  margin-right:3px;" %>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
